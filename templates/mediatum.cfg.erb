[host]
name=<%= @cfg_hostname %>
port=<%= @cfg_port %>
threads=8

[config]
reindex_time=3600
searcher=fts3  # fts3|magpy|<empty>
oaibasename=mediatum repository

[urn]
institutionid=00
pubtypes=epub  # multiple values separated with semicolon (;) are possible
namespace=     # nbn:de:bvb | nbn:en:1111 | publicid | etc 

[ftp]
activate=false
port=8021

[paths]
datadir=<%= @cfg_data_dir %>
searchstore=<%= @cfg_searchstore_dir %>
tempdir=<%= @cfg_temp_dir %>

[database]
# no sqlite support because as of now (2013-11-02) it is severly broken
type=mysql
dbhost=<%= @cfg_db_host %>
dbport=<%= @cfg_db_port %>
db=<%= @cfg_db_database %>
user=<%= @cfg_db_user %>
passwd=<%= @cfg_db_pass %>
#cache_size=100000

[ldap]
activate=false
server=serverurl
password=password
searchfilter=authLogin=[username]
username=
basedn=
attributes=attribute,attribute1
user_login=attribute
user_lastname=attribute
user_firstname=attribute
user_email=attribute
user_comment=attribute
user_group=attribute
user_org=attribute

[archive]
activate=false
class=#
interval=3600

[z3950]
activate=false
port=2101

[marc21]
mapping_name=marc21

[user]
adminuser=Administrator
guestuser=Gast
admingroup=Administration
passwd=ABC

[admin]
pageitems=10

[logging]
path=<%= @cfg_log_dir %>
file.everything=<%= @cfg_log_dir -%>/everything.log
file.database=<%= @cfg_log_dir -%>/database.log
file.backend=<%= @cfg_log_dir -%>/backend.log
file.frontend=<%= @cfg_log_dir -%>/frontend.log
file.editor=<%= @cfg_log_dir -%>/editor.log
file.usertracing=<%= @cfg_log_dir -%>/user.log
file.athana=<%= @cfg_log_dir -%>/athana.log
file.errors=<%= @cfg_log_dir -%>/errors.log

[server]
mail=mysmtpserver.com

[email]
admin=admin@mediatum.org
workflow=admin@mediatum.org

[oai]
formats=mediatum # format for testing

schema.mediatum=http://mediatum/no-schema-defined
namespace.mediatum=http://www.mediatum.org/oai/mediatum

[plugins]

[i18n]
languages=en,de
en=i18n/mediatum-en.po
de=i18n/mediatum-de.po
